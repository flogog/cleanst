<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.flogog.cleanst.NewLocation">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/trash_can"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/trashcan_one"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:layout_above="@+id/recycle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:onClick="newTrashCan"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recycle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/recycle_one"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:layout_marginBottom="201dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/trash_can"
        android:onClick="newRecycleBin"/>

    <TextView
        android:text="@string/item_waste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="87dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/recycle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/item_recycle_bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="121dp"
        android:layout_below="@+id/trash_can"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="39dp"
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/recycle_one"
        android:onClick="newRecycleBin"/>

</RelativeLayout>
